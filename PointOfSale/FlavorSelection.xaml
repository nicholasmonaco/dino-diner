<Page x:Class="PointOfSale.FlavorSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="FlavorSelection">

    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">Add to Order</TextBlock>

        <WrapPanel VerticalAlignment="Center">
            <WrapPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="120"/>
                    <Setter Property="Height" Value="120"/>
                    <Setter Property="Margin" Value="10"/>
                </Style>
            </WrapPanel.Resources>

            <Button Click="FlavorClick">Cherry</Button>
            <Button Click="FlavorClick">Chocolate</Button>
            <Button Click="FlavorClick">Cola</Button>
            <Button Click="FlavorClick">Lime</Button>
            <Button Click="FlavorClick">Orange</Button>
            <Button Click="FlavorClick">Root Beer</Button>
            <Button Click="FlavorClick">Vanilla</Button>
        </WrapPanel>
    </Grid>
</Page>
