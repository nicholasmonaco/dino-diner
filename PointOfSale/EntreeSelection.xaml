<Page x:Class="PointOfSale.EntreeSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EntreeSelection">

    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">Add to Order</TextBlock>

        <WrapPanel VerticalAlignment="Center">
            <WrapPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="120"/>
                    <Setter Property="Height" Value="120"/>
                    <Setter Property="Margin" Value="10"/>
                </Style>
            </WrapPanel.Resources>

            <Button Click="EntreeClick">Brontowurst</Button>
            <Button Click="EntreeClick">Dino-Nuggets</Button>
            <Button Click="EntreeClick">Prehistoric PB&amp;J</Button>
            <Button Click="EntreeClick">Pterodactyl Wings</Button>
            <Button Click="EntreeClick">Steakosaurus Burger</Button>
            <Button Click="EntreeClick">T-Rex King Burger</Button>
            <Button Click="EntreeClick">Veloci-Wrap</Button>
        </WrapPanel>
    </Grid>
</Page>
